«IMPORT mandroid»

«DEFINE Root FOR mandroid::Aplication»
	
	«FILE "manifest.xml"»
		Nombre:«name»
		Package:«package»
		MinSDK:«minSDK»
		TargetSDK:«targetSDK»
		«EXPAND GeneraActivtyEnManifest  FOREACH run.typeSelect(Activity)»
	«ENDFILE»
	
	«EXPAND GeneraActivtyFichero  FOREACH run.typeSelect(Activity)»
«ENDDEFINE»

«DEFINE GeneraActivtyFichero  FOR Activity»

	«FILE "/src//"+this.package+"/"+this.name+".java"»
	package «package»;
	
	import android.app.Activity;
	import android.content.Intent;
	import android.os.Bundle;
	
	public class «name» extends Activity {
	@Override
	  protected void onCreate(Bundle savedInstanceState) {
	         super.onCreate(savedInstanceState);
	           
	  }
	
	«ENDFILE»
«ENDDEFINE»
«DEFINE GeneraActivtyEnManifest  FOR Activity»
	</activity>   
          <activity
            android:name=«package».«name»
            android:label=«name» >
        </activity> 
«ENDDEFINE»